docker run --detach \
  --publish 1443:443 --publish 8080:80 --publish 1025:22 \
  --name gitlab \
  --restart always \
  --volume gitlab_config:/etc/gitlab \
  --volume gitlab_logs:/var/log/gitlab \
  --volume gitlab_data:/var/opt/gitlab \
  --shm-size 2gb \
  --env GITLAB_OMNIBUS_CONFIG="external_url 'http://your-server-ip:8080'" \
  gitlab/gitlab-ce:latest
